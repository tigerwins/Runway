<ul>
  <% flash[:errors].each do |error| %>
    <li>
      <%= error %>
    </li>
  <% end %>
</ul>

<form action="/airplanes" method="post">
  <label>Form Authenticity Token
    <input type="text" name="authenticity_token" value="<%= form_authenticity_token %>">
  </label>

  <label>Make
    <input
      type="text"
      name="airplane[make]"
      value="<%= @airplane.make %>"
    >
  </label>

  <label>Model
    <input
      type="text"
      name="airplane[model]"
      value="<%= @airplane.model %>"
    >
  </label>

  <input type="submit">
</form>
